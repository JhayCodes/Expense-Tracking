@model ExpenseTracking.Models.Category

@{
    ViewData["PageTitle"] =  Model.CategoryId == 0 ? "Create a category" : "Edit Category";
}


<br />
<div class="row">
    <div class="col-md-7">
        <div class="widget p-5">
            <form asp-action="AddOrEdit" >
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" value="@Model.CategoryId" name="CategoryId" />
                <div class="mb-3">
                    <div class='e-btn-group custom-rbt-group'>
                        <div class='e-btn-group'>
                            <input type="radio" id="radioleft" name="Type" value="Expense" checked="@(Model.Type=="Expense")" />
                            <label class="e-btn" for="radioleft">Expense</label>
                            <input type="radio" id="radiomiddle" name="Type" value="Income" checked="@(Model.Type=="Income")" />
                            <label class="e-btn" for="radiomiddle">Income</label>
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <ejs-textbox id="title" placeholder="Title" floatLabelType="Always" ejs-for="@Model.Title"></ejs-textbox>
                    <span asp-validation-for="Title" class="text-danger fs-6"></span>
                </div>
                <div class="mb-3">
                    <ejs-textbox id="icon" placeholder="Icon" floatLabelType=Always ejs-for="@Model.Icon"></ejs-textbox>
                    <span asp-validation-for="Icon" class="text-danger"></span>
                </div>
                   @* <input type="submit" value="Create" class="form-control" />*@
                <ejs-button id="submit" typeof="submit" content="Submit"></ejs-button>
            </form>
        </div>
    </div>
    <div class="col-md-5">
        <div class="widget h-100 d-flex justify-content-center align-items-center" style="background-color:#212b36">
            <i class="fa-solid fa-shapes fa-2xl"></i>
        </div>
    </div>
   
</div>


@section Scripts{

}